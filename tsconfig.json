{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "es2020"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "excludeExternals": false,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": [
      "src/docs.ts",
    ],
    "out": "./docs",
  }
}